<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="Homework_4.Controller">
    <center>
        <TextArea fx:id="taChatMessages" editable="false" focusTraversable="false"/>
    </center>
    <bottom>
        <BorderPane>
            <center>
                <TextField fx:id="tfInputMessage" onAction="#btnSendMessageAction"/>
            </center>
            <right>
                <Button fx:id="bSendMessage" text="Отправить" onAction="#btnSendMessageAction"/>
            </right>
        </BorderPane>
    </bottom>
</BorderPane>